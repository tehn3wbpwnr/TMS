<Window x:Class="TMS.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS"
        mc:Ignorable="d"
        Title="Configuration" Height="200" Width="400">
    <Grid Margin="0,0,10,-6">
        <Button x:Name="btnLogFilePath" Content="Change Log Path" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Click="btnLogFilePath_Click" Height="22" RenderTransformOrigin="-0.34,-1.034"/>
        <Label Content="IP Address: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Port :" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtIP" HorizontalAlignment="Left" Margin="82,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtPort" HorizontalAlignment="Left" Margin="82,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnChangeIPAndPort" Content="Change IP and Port" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Click="btnChangeIPAndPort_Click"/>

    </Grid>
</Window>
