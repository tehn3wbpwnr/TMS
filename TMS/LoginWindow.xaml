<Window x:Class="TMS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Canvas>
        <Label x:Name="LoginTitle" Content="Welcome to TMS" HorizontalAlignment="Left" Margin="343,134,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblUserName" Content="UserName:" HorizontalAlignment="Left" Margin="279,191,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="282,222,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="352,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="352,222,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Log in" HorizontalAlignment="Left" Margin="375,276,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <Label x:Name="lblError" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,245,0,0" VerticalAlignment="Top" Foreground="Red" />

    </Canvas>
</Window>
