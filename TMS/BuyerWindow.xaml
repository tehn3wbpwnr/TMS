<Window x:Class="TMS.BuyerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS"
        mc:Ignorable="d"
        Title="BuyerWindow" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="True" Margin="30,120,30,30" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="681,65,0,0" VerticalAlignment="Top" Height="30" Width="89" Click="btnConnect_Click"/>

    </Grid>
</Window>
